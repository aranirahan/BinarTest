<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".feature.HomeActivity">
    <android.support.v7.widget.RecyclerView
            android:layout_margin="24dp"
            android:background="@drawable/bg_border"
            android:id="@+id/rv_android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_out"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="32dp"
            android:layout_marginEnd="32dp"
            android:src="@drawable/ic_call_missed_outgoing_black_24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:backgroundTint="@color/hx80CBC4"
            app:backgroundTint="@color/hx80CBC4"
            android:background="@color/hx80CBC4"
            android:layout_height="wrap_content"/>

</android.support.constraint.ConstraintLayout>